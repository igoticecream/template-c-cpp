{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch (gdb)",
            "type": "cppdbg",
            "request": "launch",
            "preLaunchTask": "make",
            "program": "${workspaceFolder}/out/${workspaceFolderBasename}",
            "args": [],
            "stopAtEntry": true,
            "logging": {
                "trace": true,
                "traceResponse": true
            },
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/local/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
